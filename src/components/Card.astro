---
export interface Props {
  href: string;
  title: string;
  body: string;
  src: string;
  technologies: Array<string>;
}

const { title, body, src, href, technologies } = Astro.props;
---

<li class="link-card flex rounded-sm mt-[15px] mb-10 max-h-56">
  <img class="hidden sm:block rounded-l-sm h-56 w-40" src={src} />
  <div class="flex flex-col p-5">
    <a href={href} target="_blank">
      <h2 class="text-xl">
        {title}
        <span>&rarr;</span>
      </h2>
    </a>
    <p>
      {body}
    </p>
    <div class="flex space-x-1 w-full md:space-x-2 mt-10 self-end">
      {
        technologies.map((technology) => {
          return (
            <div class="p-1 md:p-2 text-xs rounded-sm bg-fuchsia-200 text-fuchsia-800">
              {technology}
            </div>
          );
        })
      }
    </div>
  </div>
</li>
<style>
  .link-card {
    list-style: none;
    display: flex;
    background-color: white;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -2px rgba(0, 0, 0, 0.1);
  }

  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 1rem 1.3rem;
    border-radius: 0.35rem;
    color: #111;
    background-color: white;
    opacity: 0.8;
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: #444;
  }
</style>
