<style>
  @font-face {
    font-family: "MavenPro";
    src: url("/MavenPro.ttf");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  @keyframes cursor-blink {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
  section {
    display: flex;
    height: 50vh;
    font-family: "MavenPro";
  }
  .section-header {
    font-family: Monaco, Consolas, Lucida Console, monospace;
    font-size: 2.25em;
    color: #747fe0;
  }
  .section-header h1::before {
    content: ">\A0";
  }
  p {
    margin: 15px 0;
    line-height: 40px;
  }
  nav a {
    font-family: "MavenPro", monospace;
    color: #747fe0;
  }
  .link-container {
    display: flex;
    justify-content: center;
    border-bottom: 8px solid rgba(0, 0, 0, 0);
    transition: border-color 0.25s;
  }
  .link-container:hover {
    border-color: #747fe0;
  }
  .active-cursor {
    margin-left: 5px;
    width: 25px;
    height: 45px;
    background-color: #747fe0;
    animation: cursor-blink 1.25s steps(2) infinite;
  }
</style>

<script>
